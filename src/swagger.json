  "paths":{
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "Create a new category",
        "description": "Create a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Category name sample",
                  "description": "Catergory description sample"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Createad"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      },

      "get":{
        "tags": ["Category"],
        "summary": "List all category",
        "description": "List all categories",
        "responses": {
          "200": {
            "description": "Sucess",
            "content":{
              "application/json":{
                "schema":{
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description":{
                        "type":"string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": ["Category"],
        "summary":"Upload a new category",
        "description":"Upload a new category",
        "requestBody":{
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses":{
          "201":{
            "description": "Createad"
          }
        }
      }
    },
    "/specifications":{
      "post": {
        "tags": ["Specifications"],
        "summary":"Create a new specification",
        "description":"Create a new specification",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Specifications"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Specification already exists!"
          }
        }
      },
      "get":{
        "tags": ["Specifications"],
        "summary": "List all specifications",
        "description": "List all specifications",
        "responses": {
          "200": {
            "description": "Sucess",
            "content":{
              "application/json":{
                "schema":{
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description":{
                        "type":"string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Specifications": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
